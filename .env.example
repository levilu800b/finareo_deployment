# ===========================================
# Finareo - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# Database Configuration
# ===========================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=finareo
MYSQL_USERNAME=finareo_user
MYSQL_USER=finareo_user
MYSQL_PASSWORD=your_secure_db_password_here

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your_256_bit_secret_key_here_min_32_chars
JWT_EXPIRATION=3600000

# ===========================================
# Email Configuration
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_specific_password
DEFAULT_FROM_EMAIL=noreply@finareo.com
EMAIL_SMTP_AUTH=true
EMAIL_STARTTLS_ENABLE=true
EMAIL_ENABLED=true
EMAIL_MAX_RETRIES=3

# ===========================================
# URL Configuration
# ===========================================
# Update with your actual domains
FRONTEND_URL=https://finareo.vercel.app
BACKEND_URL=https://api.finareo.com
CORS_ALLOWED_ORIGINS=https://finareo.vercel.app,http://localhost:5173

# ===========================================
# Environment
# ===========================================
ENVIRONMENT=production
DDL_AUTO=update
# Use 'update' for first deploy, then change to 'validate'

# ===========================================
# Owner Account (Initial Setup)
# ===========================================
# These are used to create the owner account on first startup
OWNER_EMAIL=owner@example.com
OWNER_PASSWORD=
OWNER_USERNAME=owner
OWNER_FIRST_NAME=
OWNER_LAST_NAME=
OWNER_OUTLOOK_EMAIL=
