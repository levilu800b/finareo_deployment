# LiveLens Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Database Configuration
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_secure_mysql_password
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=your_secure_root_password

# Django Configuration
DJANGO_SECRET_KEY=your-very-long-and-random-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend,0.0.0.0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:8000,http://localhost:8000,http://localhost:5173

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=your_email@gmail.com

# Google AI Configuration (Optional)
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Redis Configuration
REDIS_URL=redis://redis:6379/1
REDIS_HOST=redis
REDIS_PORT=6379

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
VITE_API_BASE_URL=http://localhost:8000/api
VITE_BACKEND_URL=http://localhost:8000
VITE_NODE_ENV=development
VITE_ENVIRONMENT=development

# Django Superuser Configuration
DJANGO_SUPERUSER_USERNAME=your_admin_username
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your_secure_admin_password

# Additional Security Configuration
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:8000,http://localhost:8000,http://localhost:5173
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password-or-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Media Settings
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Python Configuration
PYTHONPATH=/app
DJANGO_SETTINGS_MODULE=app.settings

# Frontend Build Configuration
VITE_API_URL=http://localhost:8000
VITE_ENVIRONMENT=development

# Testing Environment (CI/CD)
# Use different database for testing to avoid conflicts
CI_MYSQL_DATABASE=livelens_test
CI_MYSQL_USER=test_user
CI_MYSQL_PASSWORD=test_password
CI_MYSQL_HOST=127.0.0.1
CI_MYSQL_PORT=3306
CI_DJANGO_SECRET_KEY=test-secret-key-for-ci-only
CI_REDIS_HOST=127.0.0.1
